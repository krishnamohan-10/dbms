DECLARE
    CURSOR c1 IS SELECT empno, ename, sal FROM employees;
    v_id employees.empno%TYPE;
    v_name employees.ename%TYPE;
    v_sal employees.sal%TYPE;
BEGIN
    OPEN c1;
    LOOP
        FETCH c1 INTO v_id, v_name, v_sal;
        EXIT WHEN c1%NOTFOUND;
        DBMS_OUTPUT.PUT_LINE(v_id || ' - ' || v_name || ' - ' || v_sal);
    END LOOP;
    CLOSE c1;
END;
/
